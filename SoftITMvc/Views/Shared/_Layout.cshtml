<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SoftIT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="header">
        <div id="logo">
            <img src="~/Content/Images/Logo_1000x1000.png" />
        </div>
        <div id="login">
            @Html.Partial("_LoginPartial")
        </div>
        <div id="menu">
            <ul>
                <li>@Html.ActionLink("Kezdőlap", "Index", "Home")</li>
                <li>@Html.ActionLink("Kapcsolat", "Contact", "Home")</li>
                <li>@Html.ActionLink("Rendelés", "About", "Home")</li>
                
                @if (Request.IsAuthenticated)
                { 
                    <li>@Html.ActionLink("Projektjeim", "About", "Home")</li>
                    
                    if (User.IsInRole("Admin"))
                    { 
                        <li>@Html.ActionLink("Alkalmazottak", "Index", "Employees")</li>
                        <li>@Html.ActionLink("Projektek", "Index", "Projects")</li>
                    }
                }
            </ul>
        </div>
    </div>
    <div id="body">
        <div id="innerbody">
            @RenderBody()
        </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - SoftIT</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

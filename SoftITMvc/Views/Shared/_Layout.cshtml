<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SoftIT Hungary Bt.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-54286985-1', 'auto');
      ga('send', 'pageview');
    </script>
</head>
<body>
    <div id="header">
        <div id="logo">
            <img src="~/Content/Images/Logo_1000x1000.png" />
        </div>
        <div id="login">
            @Html.Partial("_LoginPartial")
        </div>
        <div id="menu">
            <ul>
                <li>@Html.ActionLink("Kezdőlap", "Index", "Home")</li>
                <li>@Html.ActionLink("Kapcsolat", "Contact", "Home")</li>
                
                @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Megrendelések", "Index", "OrdersAdmin")</li>
                        <li>@Html.ActionLink("Alkalmazottak", "Index", "EmployeesAdmin")</li>
                        <li>@Html.ActionLink("Projektek", "Index", "ProjectsAdmin")</li>
                        <li>@Html.ActionLink("Megrendelő", "Register", "Account")</li>
                        <li>@Html.ActionLink("Admin", "RegisterAdmin", "Account")</li>
                        <li>@Html.ActionLink("Felhasználók", "Index", "UsersAdmin")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Ajánlatkérés", "About", "Home")</li>
                        <li>@Html.ActionLink("Projektjeim", "Projects", "Home")</li>
                    }
                }
                else
                {
                    <li>@Html.ActionLink("Ajánlatkérés", "About", "Home")</li>
                    <li>@Html.ActionLink("Bejelentkezés", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    <li>@Html.ActionLink("Regisztráció", "Register", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                }
            </ul>
        </div>
    </div>
    <div id="body">
        <div id="innerbody">
            @RenderBody()
        </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - <strong>Soft IT</strong></p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
